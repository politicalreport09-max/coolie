# Production Environment Variables

# Database
POSTGRES_PASSWORD=your_very_secure_database_password_here
DATABASE_URL=postgresql://coolie_user:your_very_secure_database_password_here@postgres:5432/coolie_db

# Backend
JWT_SECRET=your_jwt_secret_key_here_make_it_very_long_and_secure
NODE_ENV=production

# URLs (Update these with your actual domain/IP)
FRONTEND_URL=http://your-ec2-public-ip
BACKEND_URL=http://your-ec2-public-ip:3001
VITE_API_URL=http://your-ec2-public-ip:3001

# SSL (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem